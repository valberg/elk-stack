server {
    listen                *:{{ nginx_listen_port }};

    access_log            /var/log/nginx/kibana.access.log;
    auth_basic "Restricted";
    auth_basic_user_file /etc/nginx/kibana.htpasswd;

    location / {
        proxy_pass http://127.0.0.1:{{ kibana_listen_port }};
        proxy_read_timeout 90;
    }
}
